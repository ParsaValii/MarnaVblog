@model IEnumerable<Domain.Entities.BlogPost>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                MarnaVblog - The dev Blog
            </h1>
            <p class="lead">
                MarnaVblog is the gome to coding blogs covering a vast range of
                topics like HTML, CSS, Javascript, ASP.NET, C#, Angular etc.
                Want to read the latest dev articles? Join the bloggie app and
                get weekly blogs in your email.
            </p>
        </div>





        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/7046979/pexels-photo-7046979.jpeg?auto=compress&cs=tinysrgb&w=600"
                 alt="MarnaDevBlogs" class="d-block mx-lg-auto img-fluid" width="300">
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if (Model != null && Model.Any())
            {
                foreach (var blogPost in Model)
                {
                    <div class="mb-5 bg-light box-shadow p-5">
                        <img src="@blogPost.FeatureImageUrl" alt="@blogPost.Heading" class="mb-2 d-block img-fluid">
                        <h2 class="mb-2">@blogPost.Heading</h2>
                        <p class="mb-2">
                            Author: @blogPost.Author
                            <br />
                            Published Date: @blogPost.PublisheDate.ToShortDateString()
                        </p>
                        <p class="mb-4">
                            @foreach (var tag in blogPost.Tags)
                            {
                               <span class="badge bg-secondary me-1">@tag.Name</span> 
                            }
                        </p>
                        <p class="mb-2">@blogPost.ShortDescrption</p>

                        <a class="btn btn-dark" href="#">Read More</a>
                    </div>


                }
            }
        </div>
    </div>
</div>
